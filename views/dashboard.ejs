<%- include('partials/_header.ejs') %>
<%- include('partials/_navigator.ejs') %>
      <!-- header section end -->
      <!-- contact section start -->
      <% if (userIN) { %>
    <% if(user.role == 'dealer') { %>
      <div class="contact_section layout_padding">
         <div class="container">
            <div class="row">
               <div class="col-sm-12 text-center">
                  <h1 class="contact_taital contact_heading">DASHBOARD PAGE FOR : <%= user.name %></h1>
               </div>
            </div>
            <div class="contact_section_2">
               <div class="row">
                  <div class="col-md-12">
                     <div class="mail_section map_form_container">
                        <form method="POST" action="/furnitures">
                           <input type="text" class="mail_text" placeholder="Name" name="name">
                           <select name="category" class="form-select mail_text">
                            <% for(i = 0; i < categories.length ; i++ ) { %>
                            <option value="<%= categories[i]._id %>"><%= categories[i].name %></option>
                            <% } %>
                          </select>
                           <textarea class="massage-bt" placeholder="Description..." rows="5" id="comment" name="description"></textarea>
                           <input type="hidden" value="<%= user._id %>" name="creater">
                           <div class="col-sm-12 text-center mt-5">
                            <button style="background-color: #061543; color: #fff; padding: 25px; border-radius: 4rem;" type="submit">Create New Product</button>
                         </div>
                        </form>
                     </div>
                  </div>
               </div>
            </div>
            <div class="furnitures_section_2">
                <div class="row">
                    <h1 class="contact_taital contact_heading">Your Products : </h1>
                   <% for(i = 0 ; i < furnitures.length ; i++) { %>
                   <div class="col-md-4">
                      <div class="hover01 column">
                         <figure><img src="/images/img-2.png"></figure>
                      </div>
                      <h3 class="introduction_text"><%= furnitures[i].name %></h3>
                      <div class="seemore_bt"><a href="/furnitures/<%= furnitures[i].slug %>">See Product</a></div>
                   </div>
                   <% } %>
                </div>
             </div>
         </div>
      </div> 

      <% } %>

       <% if(user.role == 'customer') { %>

         <div class="contact_section layout_padding">
             <div class="container">
                <div class="row">
                   <div class="col-sm-12 text-center">
                      <h1 class="contact_taital contact_heading">DASHBOARD PAGE FOR : <%= user.name %></h1>
                   </div>
                </div>
                <div class="furnitures_section_2">
                    <div class="row">
                        <h1 class="contact_taital contact_heading">Your Favourites : </h1>
                        <% for (i = 0 ; i < user.favourites.length; i++) { %>
                       <div class="col-md-4">
                          <div class="hover01 column">
                             <figure><img src="/images/img-2.png"></figure>
                          </div>
                          <h3 class="introduction_text"><%= user.favourites[i].name %></h3>
                          <div class="seemore_bt"><a href="/furnitures/<%= user.favourites[i].slug %>">See Product</a></div>
                       </div>
                       <% } %>
                    </div>
                 </div>
             </div>
          </div>
       <% } %> 

      <% } %>
      <!-- contact section end -->
      <!-- footer section start -->
      <%- include('partials/_footer.ejs') %>
